<odoo>
    <data>
        <record id="action_report_student" model="ir.actions.report">
            <field name="name">Student Card</field>
            <field name="model">student.student</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">student_management.report_student_card</field>
            <field name="report_file">student_management.report_student_card</field>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_type">report</field>
        </record>

        <template id="report_student_card">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2>Student Card</h2>
                            <p><strong>Name:</strong> <span t-field="o.name"/></p>
                            <p><strong>Student ID:</strong> <span t-field="o.student_id"/></p>
                            <p><strong>Date of Birth:</strong> <span t-field="o.date_of_birth"/></p>
                            <p><strong>Age:</strong> <span t-field="o.age"/></p>
                            <p><strong>Gender:</strong> <span t-field="o.gender"/></p>
                            <p><strong>Email:</strong> <span t-field="o.email"/></p>
                            <p><strong>Phone:</strong> <span t-field="o.phone"/></p>
                            <p><strong>Address:</strong> <span t-field="o.address"/></p>
                            <h3>Registered Courses</h3>
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Course</th>
                                        <th>Registration Date</th>
                                        <th>Fee</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr t-foreach="o.registration_ids" t-as="reg">
                                        <td><span t-field="reg.course_id.name"/></td>
                                        <td><span t-field="reg.registration_date"/></td>
                                        <td><span t-field="reg.fee"/></td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>
