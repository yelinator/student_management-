<odoo>
    <data>
        <!-- Student Payment Form View -->
        <record id="student_payment_form_view" model="ir.ui.view">
            <field name="name">student.payment.form</field>
            <field name="model">student.payment</field>
            <field name="arch" type="xml">
                <form string="Student Payment">
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="student_id"/>
                            <field name="invoice_id"/>
                            <field name="amount"/>
                            <field name="payment_date"/>
                            <field name="payment_method"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Student Payment Tree View -->
        <record id="student_payment_tree_view" model="ir.ui.view">
            <field name="name">student.payment.tree</field>
            <field name="model">student.payment</field>
            <field name="arch" type="xml">
                <list string="Student Payments">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="invoice_id"/>
                    <field name="amount"/>
                    <field name="payment_date"/>
                    <field name="payment_method"/>
                </list>
            </field>
        </record>

        <!-- Student Payment Action -->
        <record id="student_payment_action" model="ir.actions.act_window">
            <field name="name">Student Payments</field>
            <field name="res_model">student.payment</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Register a new student payment.
                </p>
            </field>
        </record>

        <!-- Student Payment Menu -->
        <menuitem id="student_payment_menu" name="Payments" parent="menu_student_configuration" action="student_payment_action" sequence="40"/>
    </data>
</odoo>
