<odoo>
    <data>
        <!-- List View -->
        <record id="view_student_list" model="ir.ui.view">
            <field name="name">student.student.list</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <list string="Students">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="email"/>
                    <field name="phone"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_student_form" model="ir.ui.view">
            <field name="name">student.student.form</field>
            <field name="model">student.student</field>
            <field name="arch" type="xml">
                <form string="Student">
                    <header>
                        <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-primary"/>
                        <button name="%(action_course_registration_wizard)d" type="action" string="Register for Courses" class="btn-primary"/>
                        <field name="state" widget="statusbar" statusbar_visible="new,enrolled,graduated,cancelled"/>
                    </header>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="student_id"/>
                                <field name="date_of_birth"/>
                                <field name="age"/>
                <field name="gender"/>
                <!-- <field name="registration_ids"> -->
                            </group>
                            <group>
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Address">
                                <group>
                                    <field name="address"/>
                                </group>
                            </page>
                            <page string="Courses">
                                <field name="course_ids"/>
                            </page>
                            <page string="Registrations">
                                <field name="registration_ids">
                                    <list editable="bottom">
                                        <field name="course_id"/>
                                        <field name="registration_date"/>
                                        <field name="fee"/>
                                    </list>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_student" model="ir.actions.act_window">
            <field name="name">Students</field>
            <field name="res_model">student.student</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new student to the system.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_student_root" name="Student Management" sequence="10"/>
        <menuitem id="menu_student" name="Students" parent="menu_student_root" action="action_student" sequence="10"/>
    </data>
</odoo>