<odoo>
    <data>
        <!-- Student Invoice Form View -->
        <record id="student_invoice_form_view" model="ir.ui.view">
            <field name="name">student.invoice.form</field>
            <field name="model">student.invoice</field>
            <field name="arch" type="xml">
                <form string="Student Invoice">
                    <header>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-primary" invisible="state != 'draft'"/>
                        <button name="action_register_payment" type="object" string="Register Payment" class="btn-primary" invisible="state != 'open'"/>
                        <button name="action_cancel" type="object" string="Cancel" invisible="state in ('paid', 'cancelled')"/>
                        <button name="action_draft" type="object" string="Set to Draft" invisible="state != 'cancelled'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,open,paid"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <field name="student_id"/>
                            <field name="amount"/>
                            <field name="due_date"/>
                            <field name="registration_ids" widget="many2many_tags"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Student Invoice Tree View -->
        <record id="student_invoice_tree_view" model="ir.ui.view">
            <field name="name">student.invoice.tree</field>
            <field name="model">student.invoice</field>
            <field name="arch" type="xml">
                <list string="Student Invoices">
                    <field name="name"/>
                    <field name="student_id"/>
                    <field name="amount"/>
                    <field name="due_date"/>
                    <field name="state"/>
                </list>
            </field>
        </record>

        <!-- Student Invoice Action -->
        <record id="student_invoice_action" model="ir.actions.act_window">
            <field name="name">Student Invoices</field>
            <field name="res_model">student.invoice</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new student invoice.
                </p>
            </field>
        </record>

        <!-- Student Invoice Menu -->
        <menuitem id="student_invoice_menu" name="Invoices" parent="menu_student_configuration" action="student_invoice_action" sequence="30"/>
    </data>
</odoo>
