<odoo>
    <data>
        <!-- List View -->
        <record id="view_teacher_list" model="ir.ui.view">
            <field name="name">teacher.teacher.list</field>
            <field name="model">teacher.teacher</field>
            <field name="arch" type="xml">
                <list string="Teachers">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_teacher_form" model="ir.ui.view">
            <field name="name">teacher.teacher.form</field>
            <field name="model">teacher.teacher</field>
            <field name="arch" type="xml">
                <form string="Teacher">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                        </group>
                        <notebook>
                            <page string="Courses">
                                <field name="course_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_teacher" model="ir.actions.act_window">
            <field name="name">Teachers</field>
            <field name="res_model">teacher.teacher</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new teacher to the system.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_teacher" name="Teachers" parent="menu_student_root" action="action_teacher" sequence="30"/>
    </data>
</odoo>
