<odoo>
    <data>
        <record id="student_dashboard_form" model="ir.ui.view">
            <field name="name">student.dashboard.form</field>
            <field name="model">board.board</field>
            <field name="arch" type="xml">
                <form string="Student Dashboard">
                    <board style="1-1">
                        <column>
                            <action name="%(action_student)d" string="Students"/>
                            <action name="%(action_course)d" string="Courses"/>
                            <action name="%(action_teacher)d" string="Teachers"/>
                        </column>
                        <column>
                            <action name="%(action_course_registration_wizard)d" string="Course Registration"/>
                        </column>
                    </board>
                </form>
            </field>
        </record>

        <record id="student_dashboard" model="ir.actions.act_window">
            <field name="name">Student Dashboard</field>
            <field name="res_model">board.board</field>
            <field name="view_mode">form</field>
            <field name="usage">menu</field>
            <field name="view_id" ref="student_dashboard_form"/>
        </record>

        <menuitem id="menu_student_dashboard" name="Dashboard" parent="menu_student_root" action="student_dashboard" sequence="0"/>
    </data>
</odoo>

