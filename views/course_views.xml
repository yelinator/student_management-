<odoo>
    <data>
        <!-- List View -->
        <record id="view_course_list" model="ir.ui.view">
            <field name="name">course.course.list</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <list string="Courses">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="credits"/>
                    <field name="teacher_id"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_course_form" model="ir.ui.view">
            <field name="name">course.course.form</field>
            <field name="model">course.course</field>
            <field name="arch" type="xml">
                <form string="Course">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="code"/>
                            <field name="credits"/>
                            <field name="teacher_id"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record id="action_course" model="ir.actions.act_window">
            <field name="name">Courses</field>
            <field name="res_model">course.course</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Add a new course to the system.
                </p>
            </field>
        </record>

        <!-- Menu -->
        <menuitem id="menu_course" name="Courses" parent="menu_student_root" action="action_course" sequence="20"/>
    </data>
</odoo>
