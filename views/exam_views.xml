<odoo>
    <data>
        <!-- Exam Form View -->
        <record id="exam_form_view" model="ir.ui.view">
            <field name="name">exam.exam.form</field>
            <field name="model">exam.exam</field>
            <field name="arch" type="xml">
                <form string="Exam">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="course_id"/>
                            <field name="exam_date"/>
                            <field name="max_score"/>
                        </group>
                        <notebook>
                            <page string="Grades">
                                <field name="grade_ids" widget="one2many_list">
                                    <list editable="bottom">
                                        <field name="student_id"/>
                                        <field name="score"/>
                                        <field name="grade"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Students">
                                <field name="student_ids"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Exam Tree View -->
        <record id="exam_tree_view" model="ir.ui.view">
            <field name="name">exam.exam.tree</field>
            <field name="model">exam.exam</field>
            <field name="arch" type="xml">
                <list string="Exams">
                    <field name="name"/>
                    <field name="course_id"/>
                    <field name="exam_date"/>
                    <field name="max_score"/>
                </list>
            </field>
        </record>

        <!-- Exam Action -->
        <record id="action_exam" model="ir.actions.act_window">
            <field name="name">Exams</field>
            <field name="res_model">exam.exam</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new exam.
                </p>
            </field>
        </record>

        <!-- Exam Menu -->
        <menuitem id="menu_exam" name="Exams" parent="menu_student_configuration" action="action_exam" sequence="10"/>
    </data>
</odoo>
